{
  "version": 2,
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "env": {
    "VITE_USE_MOCK_DATA": "true"
  },
  "github": {
    "silent": true
  },
  "build": {
    "env": {
      "VITE_USE_MOCK_DATA": "true"
    }
  }
}